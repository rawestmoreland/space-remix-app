generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x", "debian-openssl-1.0.x", "debian-openssl-3.0.x"]
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Country {
  id                        Int      @id @default(autoincrement())
  name                      String
  alpha_2_code              String
  alpha_3_code              String
  nationality_name          String
  nationality_name_composed String
  createdAt                 DateTime @default(now())
  updatedAt                 DateTime @updatedAt @default(now())
}

model MissionType {
  id   Int    @id @default(autoincrement())
  name String
}

model Launch {
  id             Int           @id @default(autoincrement())
  source         String
  url            String
  slug           String
  name           String
  net            DateTime
  netPrecisionId Int?
  netPrecision   NetPrecision? @relation(fields: [netPrecisionId], references: [id])
  imageId        Int?
  image          Image?        @relation(fields: [imageId], references: [id])
  statusId       Int
  status         LaunchStatus  @relation(fields: [statusId], references: [id])
}

model LauncherConfiguration {
  id          Int      @id @default(autoincrement())
  name        String
  full_name   String
  description String
  url         String
  info_url    String
  wiki_url    String
  imageId     Int?
  active      Boolean
  programId   Int?
  program     Program? @relation(fields: [programId], references: [id])
  image       Image?   @relation(fields: [imageId], references: [id])
}

model Image {
  id            Int      @id @default(autoincrement())
  name          String
  image_url     String
  thumbnail_url String
  credit        String?
  single_use    Boolean?

  Launches              Launch[]
  Missions              Mission[]
  LancherConfigurations LauncherConfiguration[]
  Programs              Program[]
}

model Program {
  id          Int           @id @default(autoincrement())
  name        String
  description String?
  url         String
  info_url    String?
  wiki_url    String?
  start_date  DateTime?
  end_date    DateTime?
  imageId     Int?
  image       Image?        @relation(fields: [imageId], references: [id])
  type        ProgramType[]

  MissionPatches         MissionPatch[]
  LauncherConfigurations LauncherConfiguration[]
}

enum ArticleType {
  ARTICLE
  BLOG
}

enum ArticleSource {
  SPACEFLIGHT_NEWS_API
}

model Article {
  id Int @id @default(autoincrement())
  sourceId Int
  source ArticleSource @default(SPACEFLIGHT_NEWS_API)
  url String @unique
  title String
  publishedAt DateTime @default(now())
  newsSite String?
  articleType ArticleType? @default(ARTICLE)
  keywords String[] @default([])

  AIArticleSummary AIArticleSummary?
  ScrapedArticle ScrapedArticle?

  @@unique([sourceId, source])
}

enum NewsletterPostStatus {
  DRAFT
  PUBLISHED
}

model NewsletterPost {
  id Int @id @default(autoincrement())
  title String
  content String // HTML content
  status NewsletterPostStatus @default(DRAFT)
  createdAt DateTime @default(now())
}

model ScrapedArticle {
  id Int @id @default(autoincrement())
  content String
  createdAt DateTime @default(now())

  articleId Int @unique
  article Article @relation(fields: [articleId], references: [id], onDelete: Cascade)
  aiArticleSummaryId Int? @unique
  aiArticleSummary AIArticleSummary? @relation(fields: [aiArticleSummaryId], references: [id])
}

model AIArticleSummary {
  id Int @id @default(autoincrement())
  summary String
  articleId Int @unique
  article Article @relation(fields: [articleId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  category String

  ScrapedArticle ScrapedArticle?
}

model MarsAIAssessment {
  id Int @id @default(autoincrement())
  assessmentDate DateTime
  progressScore Float
  keyDevelopments String
  challenges String
  overallAssessment String
}

model ProgramType {
  id   Int    @id @default(autoincrement())
  name String

  Programs Program[]
}

model Mission {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  type        String
  imageId     Int?
  image       Image?   @relation(fields: [imageId], references: [id])
  agencies    Agency[]
}

model LaunchStatus {
  id          Int    @id @default(autoincrement())
  name        String
  abbrev      String
  description String

  Launches Launch[]
}

model NetPrecision {
  id          Int    @id @default(autoincrement())
  name        String
  abbrev      String
  description String

  Launches Launch[]
}

model MissionPatch {
  id        Int     @id @default(autoincrement())
  name      String
  image_url String
  priority  Int
  agencyId  Int?
  agency    Agency? @relation(fields: [agencyId], references: [id])

  Program Program[]
}

model Agency {
  id           Int         @id @default(autoincrement())
  name         String
  url          String?
  abbrev       String
  agencyTypeId Int?
  agencyType   AgencyType? @relation(fields: [agencyTypeId], references: [id])

  MissionPatches MissionPatch[]
  Missions       Mission[]
}

model AgencyType {
  id   Int    @id @default(autoincrement())
  name String

  Agencies Agency[]
}

enum BatchStatus {
  in_progress
  ended
  canceling
}

model AIBatch {
  id Int @id @default(autoincrement())
  batchId String
  processingStatus BatchStatus @default(in_progress)
  batchCompletedAt DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @default(now())
}
